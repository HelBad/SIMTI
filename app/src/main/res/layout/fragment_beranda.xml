<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentBeranda">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/toolbarBeranda"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/tool_beranda" >
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/colorWhite"
                android:id="@+id/idBeranda"
                android:layout_width="match_parent"
                android:layout_height="151dp"
                android:layout_marginTop="56dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="9dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Jumlah IPK"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/ipkBeranda"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textAlignment="textEnd"
                    android:textSize="23sp"
                    android:textStyle="bold"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#dddddd"/>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/colorWhiteTransparent"
                    android:id="@+id/gambarProfil"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <ImageView
                        android:id="@+id/imgBeranda"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/namaBeranda"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="20dp"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/emailBeranda"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginTop="108dp"
                    android:layout_marginBottom="19dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="100dp"
                    android:text=""
                    android:textSize="15sp"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/kontenBeranda1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/idBeranda">
                <LinearLayout
                    android:id="@+id/menuBeranda1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="30dp"
                        app:cardBackgroundColor="@color/colorWhiteTransparent"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/beranda_menu1"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Software Engineer"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textColor="#666666">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menuBeranda2"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="30dp"
                        app:cardBackgroundColor="@color/colorWhiteTransparent"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/beranda_menu2"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Data Scientist"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textColor="#666666">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menuBeranda3"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="30dp"
                        app:cardBackgroundColor="@color/colorWhiteTransparent"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/beranda_menu3"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Database Administrator"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textColor="#666666">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menuBeranda4"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="30dp"
                        app:cardBackgroundColor="@color/colorWhiteTransparent"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/beranda_menu4"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="System Engineer"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textColor="#666666">
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/kontenBeranda2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/kontenBeranda1">
                <LinearLayout
                    android:id="@+id/menuBeranda5"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="30dp"
                        app:cardBackgroundColor="@color/colorWhiteTransparent"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/beranda_menu5"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Frontend Developer"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textColor="#666666">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menuBeranda6"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="30dp"
                        app:cardBackgroundColor="@color/colorWhiteTransparent"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/beranda_menu6"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Backend Developer"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textColor="#666666">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menuBeranda7"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="30dp"
                        app:cardBackgroundColor="@color/colorWhiteTransparent"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/beranda_menu7"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Information Security"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textColor="#666666">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="30dp"
                        app:cardBackgroundColor="#dddddd"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:adjustViewBounds="true"
                            android:scaleType="center"
                            android:src="@drawable/beranda_lain"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Lainnya"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textColor="#666666">
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/spaceBeranda"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#dddddd"
                android:layout_below="@id/kontenBeranda2"></RelativeLayout>

            <RelativeLayout
                android:id="@+id/toolpageBeranda"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@id/spaceBeranda"
                android:background="@color/colorWhite"
                android:theme="?attr/actionBarTheme" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_margin="10dp"
                    android:text="Eksklusif dari SIMTI"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical">
                </TextView>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listRekom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/toolpageBeranda">
            </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>
    </ScrollView>

    <androidx.appcompat.widget.Toolbar
        app:title="Akun"
        android:id="@+id/toolbarAkun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginRight="20dp"
            android:text="Selamat Datang"
            android:textSize="22sp"
            android:textColor="@color/colorBlack"
            android:gravity="center"/>
    </androidx.appcompat.widget.Toolbar>

</RelativeLayout>