<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentUnicorn">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpagerKantor"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </androidx.viewpager.widget.ViewPager>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarUnicorn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewpagerKantor"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Selamat Datang"
            android:textSize="22sp"
            android:textColor="@color/colorBlack"
            android:gravity="center"/>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarUnicorn"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/toolbarKantor"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/tool_gradasi" >
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/menuUnicorn1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:id="@+id/pilihUnicorn1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">
                        <ImageView
                            android:src="@drawable/unicorn_bukalapak"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:scaleType="fitXY"
                            android:layout_gravity="center_horizontal" />
                        <TextView
                            android:text="Bukalapak"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="40dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menuUnicorn2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/menuUnicorn1"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:id="@+id/pilihUnicorn2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">
                        <ImageView
                            android:src="@drawable/unicorn_gojek"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:scaleType="fitXY"
                            android:layout_gravity="center_horizontal" />
                        <TextView
                            android:text="Gojek"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="40dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menuUnicorn3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/menuUnicorn2"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:id="@+id/pilihUnicorn3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">
                        <ImageView
                            android:src="@drawable/unicorn_ovo"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:scaleType="fitXY"
                            android:layout_gravity="center_horizontal" />
                        <TextView
                            android:text="Ovo"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="40dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menuUnicorn4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/menuUnicorn3"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:id="@+id/pilihUnicorn4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">
                        <ImageView
                            android:src="@drawable/unicorn_tokopedia"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:scaleType="fitXY"
                            android:layout_gravity="center_horizontal" />
                        <TextView
                            android:text="Tokopedia"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="40dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menuUnicorn5"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/menuUnicorn4"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:id="@+id/pilihUnicorn5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">
                        <ImageView
                            android:src="@drawable/unicorn_traveloka"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:scaleType="fitXY"
                            android:layout_gravity="center_horizontal" />
                        <TextView
                            android:text="Traveloka"
                            android:textColor="@color/colorBlack"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="40dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>