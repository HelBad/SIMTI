<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityProfil">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarProfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_kembali"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Profil"
            android:textSize="22sp"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"/>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarProfil"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="100dp"
                app:cardBackgroundColor="@color/colorWhiteTransparent"
                android:id="@+id/gambarProfil"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/imgProfil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/gambarProfil"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#dddddd"/>

            <TextView
                android:id="@+id/nimProfil"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/gambarProfil"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Nomor Induk Mahasiswa :"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"/>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#dddddd"
                android:id="@+id/textNimProfil"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/nimProfil"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/textNim"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/colorBlack" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/namaProfil"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/textNimProfil"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Nama :"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"/>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#dddddd"
                android:id="@+id/textNamaProfil"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/namaProfil"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/textNama"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="18dp"
                    android:text=""
                    android:textColor="@color/colorBlack" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/emailProfil"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/textNamaProfil"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Email :"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"/>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#dddddd"
                android:id="@+id/textEmailProfil"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/emailProfil"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/textEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="18dp"
                    android:text=""
                    android:textColor="@color/colorBlack" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/jkProfil"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/textEmailProfil"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Jenis Kelamin :"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"/>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#dddddd"
                android:id="@+id/textJkProfil"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/jkProfil"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/textJk"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="18dp"
                    android:text=""
                    android:textColor="@color/colorBlack" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/prodiProfil"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/textJkProfil"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Program Studi :"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"/>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#dddddd"
                android:id="@+id/textProdiProfil"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/prodiProfil"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/textProdi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="18dp"
                    android:text=""
                    android:textColor="@color/colorBlack" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/ipkProfil"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/textProdiProfil"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Indeks Prestasi Komulatif :"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"/>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#dddddd"
                android:id="@+id/textIpkProfil"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/ipkProfil"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/textIpk"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="18dp"
                    android:text=""
                    android:textColor="@color/colorBlack" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/alamatProfil"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/textIpkProfil"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Alamat :"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"/>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#dddddd"
                android:id="@+id/textAlamatProfil"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/alamatProfil"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/textAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="18dp"
                    android:text=""
                    android:textColor="@color/colorBlack" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/noProfil"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/textAlamatProfil"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Nomor Telepon :"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"/>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#dddddd"
                android:id="@+id/textNoProfil"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/noProfil"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/textNo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="18dp"
                    android:text=""
                    android:textColor="@color/colorBlack" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>